#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int u,c;
    scanf("%d",&u);
  
    if(u<=200)
    {
         c=u*0.5;
        printf("Rs.%d",c);
    }
    else if(u<=400)
    {
       c=u*0.65;
        printf("Rs.%d",c+100);
    }
    else if(u<=600)
    {
       c=u*0.80;
        printf("Rs.%d",c+200);
    }
    else
    {
       c=u*1.25;
        printf("Rs.%d",c+425);
    }

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
